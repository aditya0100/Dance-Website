extends base.pug

block scripts
    script(src='../static/index.js')

block style
    style
        include  ../static/contactStyle.css
        include  ../static/style.css


block content
    div.container
        h1 Contact Us
        form(action="/contact" method="post")
            input(type="text" name="name" class="myInput" placeholder="Enter your Name") 
            input(type="phone" name="phone" class="myInput" placeholder="Enter your Phone no.") 
            input(type="email" name="email" class="myInput" placeholder="Enter your email") 
            input(type="text" name="address" class="myInput" placeholder="Enter your Address") 
            input(type="text" name="concern" class="myInput" placeholder="Enter your concern") 
            button.btn 
                |Submit
